<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <!-- Define any variables for data binding here -->
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardview_light_background"
        android:orientation="vertical"
        android:padding="8dp"> <!-- You can define a custom background drawable -->

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:src="@drawable/ic_notification" /> <!-- Replace with your drawable -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:text="@string/enable_notifications"
            android:textSize="18sp" /> <!-- Title -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center_horizontal"
            android:text="@string/get_reminded_about_your_tasks_at_the_right_time_and_location"
            android:textSize="16sp" /> <!-- Message -->

        <Button
            android:id="@+id/enableButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:background="@color/colorPrimary"
            android:text="@string/enable"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/notNowButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/colorPrimary"
            android:text="@string/not_now"
            android:textColor="@color/white" />

    </LinearLayout>
</layout>